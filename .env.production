# Production Environment Variables for LMS API

# Database Configuration
DATABASE_URL=sqlite:///lms_production.db
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost:5432/lms_production

# Security
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here-change-this-in-production
SESSION_SECRET=your-super-secure-session-secret-key-here-change-this

# CORS Settings
CORS_ALLOW_ORIGIN=http://172.16.10.146:3000,http://172.16.10.146
CORS_ALLOW_METHODS=POST,GET,DELETE,PUT,OPTIONS
CORS_ALLOW_HEADERS=Origin, Content-Type, Accept, Authorization
CORS_ALLOW_CREDENTIALS=false
CORS_MAX_AGE=1728000

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=6543
ENVIRONMENT=production

# File Upload Settings
UPLOAD_DIRECTORY=/opt/lms/uploads
MAX_FILE_SIZE=50MB

# Logging
LOG_LEVEL=INFO
LOG_FILE=/opt/lms/logs/lms_api.log

# Admin User (for initial setup)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
# ADMIN_PASSWORD will be prompted during setup

# External LMS Integration (Optional)
MOODLE_URL=
MOODLE_TOKEN=
CANVAS_URL=
CANVAS_TOKEN=